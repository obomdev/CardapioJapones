@model CardapioJapones.ViewModels.HomeVM
@{
    ViewData["Title"] = "Home";
}

<div class="pt-5 container">
    <div class="row">
        <div class="col mx-auto text-center">
            <h1 class="display-4 text-white">Cardapio Japones</h1>
            <div class="my-3">
                <button id="btn-all" class="btn btn-md my-2 text-white bg-secondary btn-filter" onclick="filter('')">
                    Ver Todos
                </button>

                @foreach (var categoria in Model.Categorias)
                {
                    <button id="btn-@categoria.Nome" class="btn btn-sm my-2 text-white btn-filter"
                        style="background-color:" onclick="filter('@categoria.Nome')">@categoria.Nome</button>
                }
            </div>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">

        @foreach (var prato in Model.Pratos)
        {
            <!-- Card Pokemon - Inicio -->
            <div class="colpok">
                <a asp-action="Details" asp-route-id="@prato.Id" class="text-decoration-none">
                    <div class="card">
                        <img src="@prato.Imagem" class="card-img-top" alt="@prato.Nome" />
                        <div class="card-body">
                            <h5 class="card-text mb-1 text-white">Nº @prato.Id.ToString("000")</h5>
                            <h3 class="card-title text-dark">@prato.Nome</h3>
                            <div class="d-flex justify-content-between align-items-center">
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <!-- Card Pokemon - Fim -->
        }
    </div>
    <div id="zeroPokemon" class="col-lg-12 text-center d-none mt-5" style="height: 350px;">
        <h1 class="my-3 text-danger">Nenhum Prato encontrado</h1>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}